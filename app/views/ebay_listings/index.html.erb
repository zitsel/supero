<%- model_class = EbayListing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:ebay_item_id) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%= model_class.human_attribute_name(:end_time) %></th>
      <th><%= model_class.human_attribute_name(:insertion_fees) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ebay_listings.each do |ebay_listing| %>
      <tr>
        <td><%= link_to ebay_listing.id, ebay_listing_path(ebay_listing) %></td>
        <td><%= ebay_listing.product_id %></td>
        <td><%= ebay_listing.ebay_item_id %></td>
        <td><%= ebay_listing.start_time %></td>
        <td><%= ebay_listing.end_time %></td>
        <td><%= ebay_listing.insertion_fees %></td>
        <td><%=l ebay_listing.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ebay_listing_path(ebay_listing), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ebay_listing_path(ebay_listing),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ebay_listing_path,
            :class => 'btn btn-primary' %>
