<fieldset class="inputs">
<%= form_tag admin_product_etsy_listings_path method: :post do |f| %>

Title: <%= text_field_tag(:title, @product.etsy_title)%><br />
Description:  <%= text_area_tag(:description, (render :partial => 'description'))%><br />
Who Made: <%= select_tag(:who_made, options_for_select(["i_did","someone_else","collective"],"someone_else"))%><br />
<%= hidden_field_tag(:quantity, 1)%><br />
Price: <%= text_field_tag(:price, @product.price)%><br />
<%= hidden_field_tag(:shipping_template_id, @product.category.etsy_shipping_template_id)%>
<%= hidden_field_tag(:category_id, @product.category.etsy_category_id)%>
<%= hidden_field_tag(:shop_section_id, @product.category.etsy_shop_section_id)%>
<%= hidden_field_tag(:is_supply, false)%>
Tags: <%= text_field_tag(:tags)%><br />

When Made: <%= select_tag(:when_made, options_for_select(["before_1995","1998_1994","1980s","1970s","1960s","1950s","1940s","1930s","1920s","1910s","1900s","1800s","1700s","before_1700"],EtsyListing.when_made(@product.decade)))%><br />

  <%= submit_tag("Create etsy Listing")%>
<%end%>
</fieldset>
