	 
	      			<div class="col-md-10">

	      			<% @products.each do |i| %>
	      			<div class="col-xs-12 col-sm-6 col-md-3 productList">
	      				<%@thumb=i.ordered_photos.first ? i.ordered_photos.first.uploaded_file(:small) : "placeholder.jpg"%>
	      				<%=(link_to image_tag(@thumb, class: "img-sm-product"), product_path(i.id))%>
	      				<p><%="#{i.brand.try(:titleize)} - #{i.size}"%><br />
	      					<%=number_to_currency(i.price)%></p>
	      					<%= "NEW ARRIVAL" if i.new_arrival? %>
	      				</div><!-- /span -->
	      				<% end %>
	      		</div>	

