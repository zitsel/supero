<%= link_to "Add Photos", new_product_upload_path(@product.id)%>
<%= simple_form_for @product do |f|%>
	<%= f.input :sku %>
	<%= f.input :type, collection: @product.types %>
	<%= f.input :weight, hint:"grams" %>
	<%= f.input :vintage %>
	<%= f.input :mfg_date %>
	<%= f.input :mfg_country %>
	<%= f.input :condition, collection: @product.conditions_col %>
	<%= f.input :on_hand %>
	<%= f.input :needs_repair %>
	<%= f.input :needs_cleaning %>
  <%#- render 'uploads', f: f%>
  <% if @product.type %>
  	<%= f.input :price, collection: @product.price_col %>
    <%= render "products/detail/#{@product.type.downcase}", f: f%>
  <% end %>
  <%= f.button :submit%>
<% end %>
 