<%#- semantic_form_for [:admin, @product], :url => (@product.new_record? ? admin_products_path : admin_product_path) do |f| %>
<%= semantic_form_for [:admin, @product] do |f| %>
	<%= f.inputs "Basics" do %>
		<%= f.input :type, collection: Type.all.pluck(:name) %>
		<%= f.input :sku %>
		<%= f.input :weight, :as => :string%>
	<% end %>
	<%= f.inputs "Condition" do %>
		<%= f.input :condition, collection: @product.conditions_col %>
		<%= f.input :condition_notes %>
		<%= f.inputs :needs_repair, :needs_cleaning %>
	<% end %>
	<%= f.inputs "Origin" do %>
		<%= f.input :vintage%>
		<%= f.input :mfg_date %>
		<%= f.input :mfg_country, :include_blank => true%>
	<% end %>
	<%= f.inputs "Pricing" do %>
		<%= f.input :price, :as => :string %>
		<%= f.input :on_hand, :as => :string %>
	<% end %>		
    <%=  render "#{@product.type.downcase}", f: f if (@product.type) %>
	
	<%= f.inputs "Comments" do %>
		<%= f.input :notes %>
	<% end %>
	<%= f.actions :submit %>
  <%#- f.button :submit%>
<% end %>