                  <a class="list-group-item" href="/<%=type.name.underscore.pluralize.downcase%>"><%=type.display_name%></a>
                    <%end%>
	      				
	      			</div>
	      		</div><!--/span-->
	      	</div><!--/row-->
	      	<script>
	      	$(document).ready(function () {
  $('[data-toggle=offcanvas]').click(function () {
    $('.row-offcanvas').toggleClass('active')
  });
});
	      	</script>
