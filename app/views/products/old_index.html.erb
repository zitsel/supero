<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => @type.humanize.pluralize.titleize %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            sti_product_path(@type, nil, :new),
            :class => 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:sku) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:weight) %></th>
      <th><%= model_class.human_attribute_name(:properties) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>

    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.id, sti_product_path(product.type, product) %></td>
        <td><%= product.sku %></td>
        <td><%= product.type %></td>
        <td><%= product.weight %></td>
        <td><%= product.properties %></td>
        <td><%=l product.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      sti_product_path(product.type, product, :edit), :class => 'btn btn-mini' %>
                      <%= link_to "Photos(#{product.uploads.count})", new_product_upload_path(product.id) %>
                      <%= link_to "Ebay Listing(#{product.ebay_listings.count})", new_product_ebay_listing_path(product.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

