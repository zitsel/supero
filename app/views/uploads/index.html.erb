<h1>Listing uploads</h1>
<%= form_tag edit_multiple_uploads_path, method: :get do %>
<table>
  <thead>
    <tr>
      <td></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <th><%= check_box_tag "upload_ids[]", upload.id%></td>
        <td><%= image_tag(upload.uploaded_file(:small), class: 'thumb')%></td>
        <td><%= link_to 'Show', upload %></td>
        <td><%= link_to 'Edit', edit_upload_path(upload) %></td>
        <td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= submit_tag "Edit Checked"%>
<% end %>

<%= link_to 'New Upload', new_upload_path %>
