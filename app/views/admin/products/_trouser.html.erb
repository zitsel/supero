<%= f.inputs "Details" do %>

<%=f.input :brand %>
<%=f.input :label %>
<%=f.input :retailer %>
<%=f.input :cloth_mill, :placeholder => "skip unless fabric tag present" %>
<%=f.input :cloth_composition %>
<%=f.input :cloth_weave, :placeholder => "Style or Weave. Flannel, Gaberdine, Moleskin, Twill, Tweed, etc"  %>
<%=f.input :cloth_color, :placeholder => "Main Color/Colors Only." %>
<%=f.input :cloth_pattern, :placeholder => "Stripes, Plain, Herringbone, etc." %>
<%= f.input :trouser_style, collection: @product.trouser_styles_col %>
<%= f.input :trouser_fly, :placeholder => "can be skipped" %>
<%= f.input :trouser_waistband_style, :placeholder => "can be skipped"  %>
<%= f.input :trouser_waistband_lining, :placeholder => "can be skipped"  %>
<%= f.input :belt_loops, as: :boolean %>
<%= f.input :brace_buttons, as: :boolean %>
<%= f.input :tab_adjust, as: :boolean %>
<%= f.input :crotch_shield, as: :boolean %>
<%= f.input :front_closure, :placeholder => "can be skipped"  %>
<%= f.input :front_pockets_style, :placeholder => "On-Seam, Slant, Welted" %>
<%= f.input :trouser_lining, :placeholder => "Unlined, Partial" %>
<%= f.input :trouser_bottoms, :placeholder => "Unfinished, Unhemmed, Finished w/o Cuff, Finished w/ Cuff" %>
<%= f.input :trouser_waistband_width_measure %>
<%= f.input :trouser_waist_outlet_measure %>
<%= f.input :trouser_seat_measure %>
<%= f.input :thigh_measure %>
<%= f.input :knee_measure %>
<%= f.input :cuff_width_measure %>
<%= f.input :inseam_measure %>
<%= f.input :outseam_measure %>
<%= f.input :inseam_outlet_measure, :placeholder => "Blank unless finished" %>

<% end %>