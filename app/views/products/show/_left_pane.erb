<div class="main_img <%@product.display%>">
	    <span class='zoom' id='zoom_main_img'>
	    <%=image_tag(@product.uploads.first.uploaded_file(:original), id: "img_to_change")%>
	</span>
		</div>
		<div class="row thumbs">
		    <%@product.uploads.each do |i|%>
			    <div class="span1">
			    <%= image_tag(i.uploaded_file(:thumb), :class=>"thumb")%>
			</div> <!--span 1.5-->
		    <%end%>

			    </div><!--row thumbs-->
			<script>
			    $(document).ready(function(){
				$('#zoom_main_img').zoom();
				});
			</script>
			<script>
			    $(function() {
				$('.thumb').click(function(e){
				     e.preventDefault();
				     var $new = $( this ).attr("src").replace('thumb','original')
				    $("#img_to_change").attr('src',$new);
				    $('#zoom_main_img').zoom();
				 });
			    });
			</script>
