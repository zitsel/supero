<%= form_tag charges_path do %>
<article>
<label class="amount">
<span>Amount: <%=number_to_currency(@shopping_cart.total)%></span>
</label>
</article>
<script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="Checkout" data-amount="<%=@shopping_cart.total_cents%>">
</script>
<% end %>