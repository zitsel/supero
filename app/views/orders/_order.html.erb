<div class="row">
 <div class="row">
        <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                <%= render :partial => 'address', :locals => { address: order.addresses.last }%>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                    <p>
                        <em>Ordered Date: <%=order.created_at%></em>
                    </p>
                    <p>
                        <em>Order #: <%=order.id%></em>
                    </p>
                    <p>
                    <em>Order Status: <%=order.shipped? ? "Shipped" : "Awaiting Shipment" %></em>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="text-center">
                    <h1>Order</h1>
                </div>
                </span>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th></th>
                            <th></th>
                            <th class="text-center">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                    <%= render :partial=> 'ordered_item', :collection => order.ordered_items %>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td class="text-right">
                            <p>
                                <strong>Subtotal: </strong>
                            </p>
                            <p>
                                <strong>Tax: </strong>
                            </p></td>
                            <td class="text-center">
                            <p>
                                <strong><%=number_to_currency(order.subtotal)%></strong>
                            </p>
                            <p>
                                <strong><%=number_to_currency(order.tax)%></strong>
                            </p></td>
                        </tr>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td class="text-right"><h4><strong>Total: </strong></h4></td>
                            <td class="text-center text-danger"><h4><strong><%=number_to_currency(order.grandtotal)%></strong></h4></td>
                        </tr>
                    </tbody>
                </table>
                <%=link_to "View Details", order_path(order), :class=> "btn btn-success btn-lg btn-block"%>
                    
               
            </div>
        </div>
</div>
